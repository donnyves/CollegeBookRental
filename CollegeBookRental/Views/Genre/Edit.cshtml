@model CollegeBookRental.Models.Genre
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    //We have to make sure that Edits for Genre are saved.
    <div class="form-horizontal">
        <h3>Edit Genre</h3>

        <hr />
        <div>
            @Html.HiddenFor(m => m.Id)
            <div class="form-border">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label-md-2 " })
                    <div class="col-md-10">
                        @Html.EditorFor(m => m.Name, "", new { htmlAttribute = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />
    <div>
        @Html.Partial("_BackToListButtonPartial")
        <input type="submit" value="Save" class="btn btn-sm btn-success" />
    </div>
}

