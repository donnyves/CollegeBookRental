<!--Create a strongly type view to call IndividualButtonPartial-->
@model CollegeBookRental.Models.IndividualButtonPartial

@using CollegeBookRental.Models


<!--I had to item.Id to Model.GenreID, the same changes had to be made for the
   for the Detail and Delete button
    I also have to add BookID,CustomerID, and MemberShipTypeID. -->

<td style="width:400px;">
    <div class="btn-group" role="group">
        @Html.Partial("_IndividualButtonPartial",
                new IndividualButtonPartial
                {
                    Action = "Edit",
                    ButtonType = "btn-primary",
                    Glyph = "pencil",
                    Text = "Edit",
                    GenreId = Model.GenreId,
                    BookId = Model.BookId,
                    CustomerId = Model.CustomerId,
                    MembershipTypeId = Model.MembershipTypeId
                })
        @Html.Partial("_IndividualButtonPartial",
           new IndividualButtonPartial
           {
               Action = "Details",
               ButtonType = "btn-success",
               Glyph = "list",
               Text = "Details",
               GenreId = Model.GenreId,
                 BookId = Model.BookId,
               CustomerId = Model.CustomerId,
               MembershipTypeId = Model.MembershipTypeId
           })     @Html.Partial("_IndividualButtonPartial",
new IndividualButtonPartial
{
Action = "Delete",
ButtonType = "btn-danger",
Glyph = "trash",
Text = "Delete",
GenreId = Model.GenreId,
 BookId = Model.BookId,
             CustomerId = Model.CustomerId,
             MembershipTypeId = Model.MembershipTypeId,
})

    </div>




